body
  font-size 1rem
.container
  max-width 1000px

.zs-app
  background-color: #f4f5f5
.zs-box, .footer, .zs-content
  background-color #ffffff
.zs-box
  border-radius 2px
  box-shadow 0 1px 2px 0 rgba(0,0,0,.05)

.zs-content
  padding: 1rem 1.5rem;

.columns
  margin-left 0;
  margin-right 0;

@media screen and (max-width: 1089px) {
  .zs-main-header {
    padding: 0
  }
  .zs-main  {
    padding: 1.5rem 0rem
  }
}
@media screen and (min-width: 1088px) {
  .zs-main-header {
    padding: 0 1rem
  }
  .zs-main  {
    padding: 1.5rem 1rem
  }
}
